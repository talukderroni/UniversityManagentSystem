@model UniversityManagementSystemWebApp.Models.UserDefinedModels.Teacher

@{
    ViewBag.Title = "Create";
}
@{
    if (TempData["message"] != null)
    {
        <script type="text/javascript">
            alert(@Html.Raw(Json.Encode(TempData["message"])));
        </script>
    }
}
<h3>Save Teacher</h3>
 

